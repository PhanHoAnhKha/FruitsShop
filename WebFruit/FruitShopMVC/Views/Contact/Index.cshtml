@model FruitShopMVC.DTOs.ContactDTO
<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Hỗ trợ 24/7</p>
					<h1>Contact Us</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end breadcrumb section -->
<!-- contact form -->
<div class="contact-from-section mt-150 mb-150">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 mb-5 mb-lg-0">
				<div class="form-title">
					<h2>Have you any question?</h2>
					<p>Nếu bạn có thắc mắc gì về cửa hàng hoặc sản phẩm của cửa hàng chúng tôi. Vui lòng điền thông tin và lời nhắn của bạn ở dưới. Cảm ơn quý khách đã tin tưởng Fruits Shop!</p>
				</div>
				<div id="form_status"></div>
				<div class="contact-form">
					<form asp-action="AddContact" method="post">
						<p>
							<input asp-for="Name" type="text" placeholder="Name" name="name" id="name">
							<span asp-validation-for="Name" class="text-danger"></span>
							<input asp-for="Email" type="email" placeholder="Email" name="email" id="email">
							<span asp-validation-for="Email" class="text-danger"></span>
						</p>
						
						<p>
							<textarea asp-for="Message" name="message" id="message" cols="30" rows="10" placeholder="Message"></textarea>
							<span asp-validation-for="Message" class="text-danger"></span>
						</p>

						<p><input type="submit" value="Submit"></p>
					</form>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="contact-form-wrap">
					<div class="contact-form-box">
						<h4><i class="fas fa-map"></i> Shop Address</h4>
						<p>74/13 Phù Đổng Thiên Vương. <br> Thành Phố Đà Lạt</p>
					</div>
					<div class="contact-form-box">
						<h4><i class="far fa-clock"></i> Shop Hours</h4>
						<p>MON - FRIDAY: 7 to 10 PM <br> SAT - SUN: 10 to 8 PM </p>
					</div>
					<div class="contact-form-box">
						<h4><i class="fas fa-address-book"></i> Contact</h4>
						<p>Phone: +033 7928 700 <br> Email: anhkha204@gmail.com</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end contact form -->
<!-- find our location -->
<div class="find-location blue-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<p> <i class="fas fa-map-marker-alt"></i> Find Our Location</p>
			</div>
		</div>
	</div>
</div>
<!-- end find our location -->
